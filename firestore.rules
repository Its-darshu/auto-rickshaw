rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Drivers collection
    match /drivers/{document} {
      // Allow read access to everyone (for user dashboard)
      allow read: if true;
      // Allow write access only to authenticated users (admin panel)
      allow write: if request.auth != null;
    }
    
    // Stages collection
    match /stages/{document} {
      // Allow read access to everyone (for user dashboard)
      allow read: if true;
      // Allow write access only to authenticated users (admin panel)
      allow write: if request.auth != null;
    }
  }
}